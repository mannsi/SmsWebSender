@using System.Security.Claims

@if (User.IsSignedIn())
{
    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                @*<div class="btn navbar-btn"><i class="fa fa-user"></i> @User.GetUserName()</div>*@
                <a asp-controller="Account" asp-action="Settings"><i class="fa fa-user"></i> @User.GetUserName()</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link"><i class="fa fa-sign-out"></i> Skrá út</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Login"><i class="fa fa-sign-in"></i> Innskrá</a></li>
    </ul>
}
